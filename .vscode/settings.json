{
    "code-runner.executorMap": {
        "c": "cd $dir && clang -o $fileNameWithoutExt $fileName -framework OpenCL && ./$fileNameWithoutExt"
    },
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.executorMapByFileExtension": {
        ".c": "cd $workspaceRoot && clang -o $fileNameWithoutExt $fullFileName -framework OpenCL && ./$fileNameWithoutExt"
    }
}
